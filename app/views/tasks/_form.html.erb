<%= form_for [@work, @todo_list, Task.new] do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label "Assigned to" %><br>
    <%= f.select(:user_id, @user.map { |u| [u.username, u.id] }) %>
  </div>
  <div class="field">
    <%= f.hidden_field :status, :value => "0" %>
    <%= f.hidden_field :todo_list_id, :value => params[:todo_list_id] %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Task', :class => 'button right' %>
  </div>
<% end %>
